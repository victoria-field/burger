<h1 style="text-align: center; font-size: 40px">Everyone loves burgers!</h1>
<div class= "container" style="background-color: rgb(193, 70, 118);  width:50%; float: left; text-align: center; font-size: 20px">


<h2 style="">Burgers that have not been eaten!</h2>

<ol>
  {{#each yum}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">eat</button>
        </form>


      </li>
    {{/unless}}
  {{/each}}
</ol>
</div>

<div class="container" id= "eaten" style="background-color: rgb(179, 161, 146);  width:50%; float: right; text-align: center; font-size: 20px">

<h2>Burgers that have been eaten!</h2>

<ol>
  {{#each yum}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Yummy!</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ol>
</div>
<div class="container" style="background-color: rgb(198, 204, 47);  width:100%; float: left; text-align: center; font-size: 20px">


<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="eat">Eat?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0" checked> Not Eaten<br />
  </div>
</div>
  <button type="submit">Add burger</button>
</form>
